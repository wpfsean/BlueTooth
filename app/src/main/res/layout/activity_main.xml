<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/bluetooth_btn_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="藍牙模塊" />

            <Button
                android:id="@+id/setting_btn_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="設置模塊" />


            <Button
            android:id="@+id/login_btn_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Login" />

            <Button
                android:id="@+id/viewpager_btn_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Viewpager" />


            <Button
                android:id="@+id/start_services_btn_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="启动services" />


            <Button
                android:id="@+id/viewpage_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="ViewPagerAndFragment"
                android:textAllCaps="false"

                />
        </LinearLayout>


    </ScrollView>


</LinearLayout>