    <RadioGroup
        android:id="@+id/rb_child"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/bottom_intercom_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableBottom="@drawable/port_network_intercom_selected"
            android:gravity="center" />

        <RadioButton
            android:id="@+id/bottom_chat_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:drawableBottom="@drawable/port_network_intercom_selected"
            android:gravity="center" />

        <RadioButton
            android:id="@+id/bottom_video_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:drawableBottom="@drawable/port_network_intercom_selected"
            android:gravity="center" />

        <RadioButton
            android:id="@+id/rb_recommd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:drawableBottom="@drawable/port_network_intercom_selected"
            android:gravity="center" />


        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:drawableBottom="@drawable/port_network_intercom_selected"
            android:gravity="center" />
    </RadioGroup>


</RelativeLayout>
